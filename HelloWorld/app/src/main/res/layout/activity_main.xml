<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:text="Quit"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_width="58dp"
        android:layout_height="40dp" android:id="@+id/quit_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="603dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="337dp" android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:text="0"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/counterText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="165dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="547dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="176dp" android:layout_marginEnd="176dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/start_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="288dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="395dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="38dp" android:layout_marginEnd="285dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/reset_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="288dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="395dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="279dp" android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/stop_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="288dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="395dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="161dp" android:layout_marginEnd="162dp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>