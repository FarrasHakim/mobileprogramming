<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">
    <Button
            android:text="@string/toast_btn_text"
            android:layout_width="175dp"
            android:layout_height="55dp" android:id="@+id/toast_btn"
            android:layout_marginEnd="119dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="533dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="118dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/colorPrimary" android:textColor="#FFFFFF"
            android:onClick="showToast"
    />
    <Button
            android:text="@string/count_btn_text"
            android:layout_width="175dp"
            android:layout_height="55dp" android:id="@+id/count_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="493dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="55dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="118dp" android:layout_marginEnd="118dp"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:onClick="countUp"
    />
    <TextView
            android:text="@string/count_initial_value"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/counter_text"
            app:layout_constraintTop_toBottomOf="@+id/toast_btn"
            app:layout_constraintBottom_toTopOf="@+id/count_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="160sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/colorPrimary" android:background="#00FFFF"
            android:gravity="center_vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>